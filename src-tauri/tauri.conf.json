{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Calendar Widget",
  "version": "1.0.0",
  "identifier": "com.haakon.calendar-widget",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Calendar Widget",
        "width": 850,
        "height": 580,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "skipTaskbar": true,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
